<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="#006884"
        android:padding="10dp"
        android:gravity="center_vertical|center_horizontal">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:id="@+id/appointments_textViewDate"
            android:textSize="11sp"
            android:layout_gravity="center_horizontal"
            android:typeface="sans"
            android:textColor="#feabb0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:id="@+id/appointments_textViewTime"
            android:layout_gravity="center_horizontal"
            android:typeface="sans"
            android:textColor="#feabb0" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Doctor Name"
            android:textColor="#b00051"
            android:id="@+id/appointments_textViewDoctorName"
            android:layout_margin="5dp"
            android:typeface="serif" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textColorLink="#b00051"
            android:id="@+id/appointments_textViewLocation"
            android:layout_margin="5dp"
            android:autoLink="map"
            android:typeface="sans"
            android:textSize="12sp" />
    </LinearLayout>

</LinearLayout>