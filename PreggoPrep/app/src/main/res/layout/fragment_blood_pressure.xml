<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#aaaaaa">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:id="@+id/blood_pressure_chartPlaceholder"
        android:padding="10dp">

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date / Time"
        android:id="@+id/blood_pressure_textViewEntryDateTime"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/black">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="109 / 81"
        android:id="@+id/blood_pressure_textViewEntryBloodPressure"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:textSize="36sp"
        android:textColor="@android:color/black">
    </TextView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove this Reading"
        android:id="@+id/blood_pressure_buttonDelete"
        android:layout_gravity="center"
        android:layout_marginTop="50dp" />

</LinearLayout>